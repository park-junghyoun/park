<Window x:Class="CellManager.Views.CellLibary.DuplicateCellDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Duplicate Cell"
        Width="420" Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <materialDesign:Card Margin="16">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="Duplicate Cell" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="Enter identifying information for the new duplicate." Foreground="#6B7280"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,16" materialDesign:TextFieldAssist.DecorationVisibility="Hidden">
                <TextBlock Text="Model Name" Margin="0,0,0,4"/>
                <TextBox Text="{Binding ModelName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Serial Number" Margin="0,12,0,4"/>
                <TextBox Text="{Binding SerialNumber, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Part Number" Margin="0,12,0,4"/>
                <TextBox Text="{Binding PartNumber, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Margin="0,0,8,0"
                        IsCancel="True"
                        Style="{StaticResource SecondaryActionButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Cancel"
                                                Width="18"
                                                Height="18"
                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        <TextBlock Text=" Cancel"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource PrimaryActionButton}"
                        Click="Duplicate_Click"
                        IsDefault="True"
                        IsEnabled="{Binding CanConfirm}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ContentCopy"
                                                Width="18"
                                                Height="18"
                                                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        <TextBlock Text=" Duplicate"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>
