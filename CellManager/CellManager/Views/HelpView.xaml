<UserControl x:Class="CellManager.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ScrollViewer>
        <StackPanel Margin="12">
            <materialDesign:Card Margin="0,0,0,12" Padding="16">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="HelpCircle" Width="26" Height="26" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Help &amp; Support" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Find documentation, FAQs, and contact options below." Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="0,0,0,16" Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="BookOpenVariant"
                                                Width="24"
                                                Height="24"
                                                Margin="0,0,8,0"/>
                        <TextBlock Text="User Guide" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                    <TextBlock Text="Find detailed instructions on using the application."
                               TextWrapping="Wrap"
                               Margin="32,0,0,0"/>
                    <Button HorizontalAlignment="Left"
                            Margin="32,8,0,0"
                            Style="{StaticResource PrimaryActionButton}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="OpenInNew"
                                                    Width="18"
                                                    Height="18"
                                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                            <TextBlock Text=" Open User Guide"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="0,0,0,16" Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="CommentQuestion" Width="24" Height="24" Margin="0,0,8,0"/>
                        <TextBlock Text="FAQ" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                    <TextBlock Text="Common questions and answers." TextWrapping="Wrap" Margin="32,0,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Email" Width="24" Height="24" Margin="0,0,8,0"/>
                        <TextBlock Text="Contact Support" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                    <TextBlock Text="Email: support@example.com" Margin="32,0,0,0"/>
                    <TextBlock Text="Phone: +1-800-123-4567" Margin="32,4,0,0"/>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>
