<UserControl x:Class="CellManager.Views.TestSetup.EcmProfileDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tp="clr-namespace:CellManager.Models.TestProfile"
             xmlns:config="clr-namespace:CellManager.Configuration"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" d:DesignHeight="200" d:DesignWidth="400">
    <ScrollViewer Margin="20">
        <StackPanel>
            <TextBlock Text="ECM Pulse Profile" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding DisplayId, StringFormat=Profile ID\: {0}}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <Border Style="{StaticResource FormSectionBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Pulse Settings" Style="{StaticResource FormSectionHeaderTextStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" Style="{StaticResource FormLabelTextStyle}"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource FormFieldStackStyle}">
                            <TextBox Style="{StaticResource ValidationTextBoxStyle}" MaxLength="60"
                                     materialDesign:HintAssist.HelperText="{config:TestProfileRangeHint ProfileType={x:Static tp:TestProfileType.ECM}, FieldName='Name'}"
                                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Pulse Current (A)" Style="{StaticResource FormLabelTextStyle}"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Style="{StaticResource FormFieldStackStyle}">
                            <TextBox Style="{StaticResource ValidationTextBoxStyle}"
                                     materialDesign:HintAssist.HelperText="{config:TestProfileRangeHint ProfileType={x:Static tp:TestProfileType.ECM}, FieldName='PulseCurrent'}"
                                     Text="{Binding PulseCurrent, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Pulse Duration (ms)" Style="{StaticResource FormLabelTextStyle}"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Style="{StaticResource FormFieldStackStyle}">
                            <TextBox Style="{StaticResource ValidationTextBoxStyle}"
                                     materialDesign:HintAssist.HelperText="{config:TestProfileRangeHint ProfileType={x:Static tp:TestProfileType.ECM}, FieldName='PulseDuration'}"
                                     Text="{Binding PulseDuration, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Reset Time After Pulse (ms)" Style="{StaticResource FormLabelTextStyle}"/>
                        <StackPanel Grid.Row="3" Grid.Column="1" Style="{StaticResource FormFieldStackStyle}">
                            <TextBox Style="{StaticResource ValidationTextBoxStyle}"
                                     materialDesign:HintAssist.HelperText="{config:TestProfileRangeHint ProfileType={x:Static tp:TestProfileType.ECM}, FieldName='ResetTimeAfterPulse'}"
                                     Text="{Binding ResetTimeAfterPulse, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Sampling Rate (ms)" Style="{StaticResource FormLabelTextStyle}"/>
                        <StackPanel Grid.Row="4" Grid.Column="1" Style="{StaticResource FormFieldStackStyle}">
                            <TextBox Style="{StaticResource ValidationTextBoxStyle}"
                                     materialDesign:HintAssist.HelperText="{config:TestProfileRangeHint ProfileType={x:Static tp:TestProfileType.ECM}, FieldName='SamplingRateMs'}"
                                     Text="{Binding SamplingRateMs, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
