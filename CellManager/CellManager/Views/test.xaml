<Window x:Class="CellManager.Views.test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CellManager.Views"
        mc:Ignorable="d"
        Title="test" Height="450" Width="800">
    <StackPanel>
        <ComboBox ItemsSource="{Binding ProfileTypes}" 
              SelectedItem="{Binding SelectedProfileType}" />
        <ListView ItemsSource="{Binding FilteredProfiles}" 
              SelectedItem="{Binding SelectedProfile}" 
              DisplayMemberPath="DisplayNameAndId"/>
    </StackPanel>
</Window>
